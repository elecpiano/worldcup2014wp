<UserControl x:Class="WorldCup2014WP.Controls.TopBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="88" Width="480"
             VerticalAlignment="Top">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="/Assets/Images/TopBar.png" Stretch="Uniform"/>
        <Grid x:Name="secondaryHeaderPanel" Grid.Row="1" Background="{StaticResource App_Theme_Color_Dark}" Visibility="Collapsed">
            <TextBlock x:Name="secondaryHeaderTextBlock" Text="" Style="{StaticResource TopBar_Secondary_Text_Style}"/>
        </Grid>
    </Grid>
</UserControl>